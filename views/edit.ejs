<% include partials/header.ejs %>
    <div class="container">
        <div class="row"> 
            <h1 style="text-align:center;">编辑 <%= restaurant.restaurantName %> 的内容</h1>
            <div class="" style="width: 30%; margin: 25px auto;">
                <form action="/restaurants/<%= restaurant._id %>/?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= restaurant.restaurantName %>" name="restaurant[restaurantName]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= restaurant.restaurantImage %>" name="restaurant[imageUrl]">    
                    </div>
                    <div class="form-group">
                            <textarea class="form-control" type="text" name="restaurant[description]"><%= restaurant.description %></textarea>   
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">上传</button>
                    </div>
                </form>
                <a href="/restaurants">返回</a>
            </div>
        </div>
    </div>
<% include partials/footer.ejs %>