<% include partials/header.ejs %>
    <div class="container">
        <div class="row"> 
            <h1 style="text-align:center;">添加您新的分享</h1>
            <div class="" style="width: 30%; margin: 25px auto;">
                <form action="/restaurants" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="名字" name="restaurantName">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="图片链接" name="imageUrl">    
                    </div>
                    <div class="form-group">
                            <textarea class="form-control" type="text" placeholder="描述" name="description"></textarea>   
                    </div>
                    <div class="form-group">
                            <input class="form-control" type="number" placeholder="人均消费价格" name="price" min="1" step="1">    
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">上传</button>
                    </div>
                </form>
                <a href="/restaurants">返回</a>
            </div>
        </div>
    </div>
