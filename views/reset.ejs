    <div class="row">
	    <div class="col-md-12">
		    <form action="/reset/<%= token %>" method="POST">
		    <legend>重置密码</legend>
		    <div class="form-group">
		        <label for="password">新密码</label>
		        <input type="password" name="password" value="" placeholder="新密码" autofocus="autofocus" class="form-control"/>
		    </div>
		    <div class="form-group">
		        <label for="confirm">确认新密码</label>
		        <input type="password" name="confirm" value="" placeholder="确认新密码" class="form-control"/>
		    </div>
		    <div class="form-group">
		        <button type="submit" class="btn btn-primary">确认重置</button>
		    </div>
		    </form>
	    </div>
    </div>
