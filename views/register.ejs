<% include partials/header.ejs %>

    <div class="row">
        <h1 style="text-align: center">注册新账户</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/register" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="用户名">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="密码">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="firstName" placeholder="名字">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="lastName" placeholder="姓">
                </div>
                <div class="form-group">
                        <input class="form-control" type="email" name="email" placeholder="xxxxx@xxx.com">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="avatar" placeholder="头像图片链接">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">注册</button>
                </div>
            </form>
            <a href="/campgrounds">返回</a>
        </div>
    </div>

